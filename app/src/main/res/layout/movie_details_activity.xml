<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191926"
    tools:context=".MovieDetailsActivity">


    <ImageView
        android:id="@+id/poster"
        android:layout_width="530dp"
        android:layout_height="298dp"
        android:src="@drawable/orig"
        android:scaleType="centerCrop"
        android:paddingStart="-30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/gradient"
        android:layout_width="530dp"
        android:layout_height="298dp"
        android:background="@drawable/gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/nameOfFilms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="254dp"
        android:fontFamily="@font/roboto_black"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:letterSpacing="-0.0125"
        android:lineHeight="40sp"
        android:text="@string/nameFilms"
        android:textColor="@color/nameColor"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@id/guidelineEnd"
        app:layout_constraintStart_toEndOf="@id/guidelineStart"
        app:layout_constraintTop_toTopOf="parent"
        android:shadowColor="#80000000"
        android:shadowRadius="12"
        android:shadowDx="0"
        android:shadowDy="12"
        />


    <ImageView
        android:id="@+id/path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/path"
        app:layout_constraintEnd_toStartOf="@id/TVback"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="59dp"
        android:layout_marginStart="18dp"
        />

    <TextView
        android:id="@+id/TVback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:textColor="#80FFFFFF"
        android:fontFamily="@font/roboto_light"
        android:textSize="12sp"
        android:lineHeight="16sp"
        android:textAlignment="center"
        android:layout_marginTop="56dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/path"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/genreOfFilms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_light"
        android:lineHeight="20sp"
        android:text="@string/genreOfFilms"
        android:textColor="#FF3466"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toStartOf="@id/guidelineEnd"
        app:layout_constraintStart_toEndOf="@id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@id/nameOfFilms"
        />

    <ImageView
        android:id="@+id/starIconP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/star_icon_plus"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@id/genreOfFilms"
        />

    <ImageView
        android:id="@+id/starIconP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/star_icon_plus"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/starIconP1"
        app:layout_constraintTop_toBottomOf="@id/genreOfFilms"
        android:layout_marginStart="3.25dp"
        />

    <ImageView
        android:id="@+id/starIconP3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/star_icon_plus"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/starIconP2"
        app:layout_constraintTop_toBottomOf="@id/genreOfFilms"
        android:layout_marginStart="3.25dp"
        />

    <ImageView
        android:id="@+id/starIconP4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/star_icon_plus"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/starIconP3"
        app:layout_constraintTop_toBottomOf="@id/genreOfFilms"
        android:layout_marginStart="3.25dp"
        />

    <ImageView
        android:id="@+id/starIconP5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/star_icon_minus"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/starIconP4"
        app:layout_constraintTop_toBottomOf="@id/genreOfFilms"
        android:layout_marginStart="3.25dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rating_number"
        android:textSize="14sp"
        android:textColor="#6D6D80"
        android:fontFamily="@font/roboto_black"
        android:lineHeight="20sp"
        app:layout_constraintStart_toEndOf="@id/starIconP5"
        app:layout_constraintTop_toBottomOf="@id/genreOfFilms"
        android:layout_marginStart="9dp"
        android:layout_marginTop="4dp"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />


    <!--Использую это потом, если понадобится
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top" />
        -->

</androidx.constraintlayout.widget.ConstraintLayout>