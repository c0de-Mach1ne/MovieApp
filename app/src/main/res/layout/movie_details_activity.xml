<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191926"
    tools:context=".MovieDetailsActivity">


    <ImageView
        android:id="@+id/poster"
        android:layout_width="530dp"
        android:layout_height="298dp"
        android:paddingStart="-30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/orig"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/gradient"
        android:layout_width="530dp"
        android:layout_height="298dp"
        android:background="@drawable/gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ageRestrictions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rectangle_for_age"
        android:fontFamily="@font/roboto_black"
        android:gravity="center"
        android:text="@string/age"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/nameOfFilms"
        app:layout_constraintStart_toEndOf="@id/guidelineStart" />

    <TextView
        android:id="@+id/nameOfFilms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="254dp"
        android:fontFamily="@font/roboto_black"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:letterSpacing="-0.0125"
        android:lineHeight="40sp"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="12"
        android:shadowRadius="12"
        android:text="@string/nameFilms"
        android:textColor="@color/nameColor"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@id/guidelineEnd"
        app:layout_constraintStart_toEndOf="@id/guidelineStart"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="59dp"
        android:src="@drawable/path"
        app:layout_constraintEnd_toStartOf="@id/TVback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/roboto_light"
        android:lineHeight="16sp"
        android:text="@string/back"
        android:textAlignment="center"
        android:textColor="#80FFFFFF"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/path"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/genreOfFilms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_light"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:lineHeight="20sp"
        android:text="@string/genreOfFilms"
        android:textColor="#FF3466"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/guidelineEnd"
        app:layout_constraintStart_toEndOf="@id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@id/nameOfFilms" />

    <ImageView
        android:id="@+id/starIconP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/star_icon_plus"
        app:layout_constraintStart_toEndOf="@id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@id/genreOfFilms" />

    <ImageView
        android:id="@+id/starIconP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3.25dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/star_icon_plus"
        app:layout_constraintStart_toEndOf="@id/starIconP1"
        app:layout_constraintTop_toBottomOf="@id/genreOfFilms" />

    <ImageView
        android:id="@+id/starIconP3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3.25dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/star_icon_plus"
        app:layout_constraintStart_toEndOf="@id/starIconP2"
        app:layout_constraintTop_toBottomOf="@id/genreOfFilms" />

    <ImageView
        android:id="@+id/starIconP4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3.25dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/star_icon_plus"
        app:layout_constraintStart_toEndOf="@id/starIconP3"
        app:layout_constraintTop_toBottomOf="@id/genreOfFilms" />

    <ImageView
        android:id="@+id/starIconP5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3.25dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/star_icon_minus"
        app:layout_constraintStart_toEndOf="@id/starIconP4"
        app:layout_constraintTop_toBottomOf="@id/genreOfFilms" />

    <TextView
        android:id="@+id/numOfReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_black"
        android:lineHeight="20sp"
        android:text="@string/rating_number"
        android:textColor="#6D6D80"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/starIconP5"
        app:layout_constraintTop_toBottomOf="@id/genreOfFilms" />

    <TextView
        android:id="@+id/storyLineHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/roboto_black"
        android:lineHeight="14sp"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="12"
        android:shadowRadius="12"
        android:text="@string/storyline"
        android:textAlignment="textStart"
        android:textColor="#ECECEC"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/guidelineEnd"
        app:layout_constraintStart_toEndOf="@id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@id/starIconP1" />

    <TextView
        android:id="@+id/StorylineText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_light"
        android:lineHeight="20sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/storyLineText"
        android:textAlignment="textStart"
        android:textColor="#BFFFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/guidelineEnd"
        app:layout_constraintStart_toEndOf="@id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@id/storyLineHeader" />

    <TextView
        android:id="@+id/castHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_black"
        android:lineHeight="24sp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:shadowColor="#80000000"
        android:shadowDy="12"
        android:shadowRadius="12"
        android:text="@string/HeadingOfCast"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@id/StorylineText" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cast1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/guidelineHorizontal"
        app:layout_constraintStart_toEndOf="@id/guidelineStart"
        android:layout_marginTop="7dp"
        android:src="@drawable/robert_dwn"
        app:shapeAppearanceOverlay="@style/rad"

        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="582dp" />


    <!--Использую это потом, если понадобится
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top" />
        -->

</androidx.constraintlayout.widget.ConstraintLayout>