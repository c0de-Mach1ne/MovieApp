<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#191926"
    >

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_cast_container"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:cardCornerRadius="4dp">

        <ImageView
            android:id="@+id/iv_cast_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/robert_dwn" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_cast_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_black"
        tools:text="Robert"
        android:textColor="#D8D8D8"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/card_view_cast_container"
        app:layout_constraintTop_toBottomOf="@id/card_view_cast_container" />

    <TextView
        android:id="@+id/tv_cast_second_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_black"
        tools:text="Downey Jr."
        android:textColor="#D8D8D8"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_cast_first_name"
        app:layout_constraintTop_toBottomOf="@id/tv_cast_first_name" />


</androidx.constraintlayout.widget.ConstraintLayout>